        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:padding="16dp">

        <Button
            android:id="@+id/btn1"
            style="@style/TicTacToeButton"
            android:onClick="Check" />

        <Button
            android:id="@+id/btn2"
            style="@style/TicTacToeButton"
            android:onClick="Check" />

        <Button
            android:id="@+id/btn3"
            style="@style/TicTacToeButton"
            android:onClick="Check" />

        <Button
            android:id="@+id/btn4"
            style="@style/TicTacToeButton"
            android:onClick="Check" />

        <Button
            android:id="@+id/btn5"
            style="@style/TicTacToeButton"
            android:onClick="Check" />

        <Button
            android:id="@+id/btn6"
            style="@style/TicTacToeButton"
            android:onClick="Check" />

        <Button
            android:id="@+id/btn7"
            style="@style/TicTacToeButton"
            android:onClick="Check" />

        <Button
            android:id="@+id/btn8"
            style="@style/TicTacToeButton"
            android:onClick="Check" />

        <Button
            android:id="@+id/btn9"
            style="@style/TicTacToeButton"
            android:onClick="Check" />

    </GridLayout>

</LinearLayout>
